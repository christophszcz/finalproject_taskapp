<h1>Sign Up</h1>

<%= form_for @user do |f| %>
	<div class="field">
		<%= f.label :first_name%><br/>
		<%= f.text_field :first_name%>
	</div>
	<div class="field">
		<%= f.label :last_name%><br/>
		<%= f.text_field :last_name%>
	</div>
	<div class="field">
		<%= f.label :phone_number%></br>
		<%= f.text_field :phone%>
	</div>
	<div class="field">
		<%= f.label :email%><br/>
		<%= f.text_field :email%>
	</div>
	<div class="field">
		<%= f.label :password%>
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="field"></div>
	 <%= f.label :user_profile_image %>
	 <%= f.file_field :avatar %>

	 <div class="action"><%= f.submit %></div>
 <% end %>